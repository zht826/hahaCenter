Page{
    width: 100%;
    height: 100%;
    background-color: #f5f5f9;
    text-align: center;
    overflow: hidden;
    font-size: 40rpx;
}
.top-bar{
    height: 60rpx;
    line-height: 60rpx;
    background-color: #000;
    padding: 20rpx 40rpx;
}
.top-bar .scroll-message{
    height: 100%;
    font-size: 40rpx;
    width: 100%;
    text-align: center;
    color:#fff;
}
#canvas{
    width: 100%;
    height: 50%;
}
.user-wrap{
    width: 100%;
    height: 50%;
    position: relative;
    box-sizing: border-box;
    padding-top: 80rpx;
    overflow:hidden;
}
.input{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9999;
    width: 700rpx;
    height: 70rpx;
    border: 1px solid #000;
    text-align: left;
    padding: 5rpx 10rpx;
    margin-left: 15rpx;
    margin-top: 10rpx;
    background-color: #fff;
}
.input input{
    width: 550rpx;
    float: left;
    height: 70rpx;
}
.input .send{
    width: 100rpx;
    float: right;
    padding: 10rpx 0;
    border: 1px solid #ccc;
    text-align: center;
    box-sizing: border-box;
    height: 70rpx;
    line-height: 50rpx;
    border-radius: 5px;
    background-color: #007aff;
    color: #fff;
}
.send-hover{
    opacity: 0.7;
}
.draw-panel{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9999;
    width: 700rpx;
    height: 70rpx;
    border: 1px solid #000;
    text-align: left;
    padding: 5rpx 10rpx;
    margin-left: 15rpx;
    background-color: #fff;
}
.draw-panel .keyword{
    float: right;
    height: 70rpx;
    line-height: 70rpx;
}
.draw-panel .draw-tool{
    float: left;
    height: 70rpx;
    line-height: 70rpx;
    width: 40%;
    display: flex;
    justify-content: space-between;
}
.draw-panel .draw-tool .draw-width{
    width: 40%;
    height: 70rpx;
    background-color: #000;
}
.draw-panel .draw-tool .draw-color{
    width: 40%;
    height: 70rpx;
    background-color: #000;
}
.user-module{
    width: 750rpx;
    padding: 20rpx 50rpx;
    box-sizing: border-box;
    overflow: hidden;
    height: 80%;
}
.user{
    width: 150rpx;
    float: left;
    margin:0 33.3333333rpx;
    position: relative;
    height: 50%;
}
.user .user-icon{
    width: 150rpx;
    height: 150rpx;
    line-height: 150rpx;
    background-color: #007aff;
    color: #fff;
    font-size: 100rpx;
}
.user-name{
    font-size: 30rpx;
    margin-top: 10rpx;
}
.user-soccer{
    position: absolute;
    top: 0;
    right: 0;
    /*width: 60rpx;*/
    height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    z-index: 99999999;
    background-color:#ccc;
    padding: 0 10rpx;
}