page{
    width: 100%;
    height: 100%;
    background-color: #f5f5f9;
    text-align: center;
    overflow: hidden;
    font-size: 40rpx;
}
#canvas{
    width: 100%;
    height: 50%;
}
.input{
    width: 700rpx;
    height: 70rpx;
    border: 1px solid #000;
    text-align: left;
    padding: 5rpx 10rpx;
    margin-left: 15rpx;
    margin-top: 20rpx;
}
.input input{
    width: 550rpx;
    float: left;
    height: 70rpx;
}
.input .send{
    width: 100rpx;
    float: right;
    padding: 10rpx 0;
    border: 1px solid #ccc;
    text-align: center;
    box-sizing: border-box;
    height: 70rpx;
    line-height: 50rpx;
    border-radius: 5px;
    background-color: #007aff;
    color: #fff;
}
.send-hover{
    opacity: 0.7;
}
.user-module{
    width: 650rpx;
    padding: 20rpx 50rpx;
}
.user{
    width: 150rpx;
    height: 200rpx;
    float: left;
    margin:0 33.3333333rpx;
    position: relative;
}
.user .user-icon{
    width: 150rpx;
    height: 150rpx;
    line-height: 150rpx;
    background-color: #007aff;
    color: #fff;
    font-size: 100rpx;
}
.user-name{
    font-size: 30rpx;
    margin-top: 10rpx;
}
.user-soccer{
    position: absolute;
    top: 0;
    right: 0;
    /*width: 60rpx;*/
    height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    z-index: 99999999;
    background-color:#ccc;
    padding: 0 10rpx;
}