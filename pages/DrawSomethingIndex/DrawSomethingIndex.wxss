page{
    width: 100%;
    height: 100%;
    background-color: #f5f5f9;
    text-align: center;
    overflow: hidden;
    font-size: 40rpx;
}
.top-bar{
    height: 60rpx;
    line-height: 80rpx;
    background-color: #000;
    padding: 20rpx 40rpx;
}
.top-bar .my-info{
    height: 100%;
    float: left;
    font-size: 40rpx;
    width: 500rpx;
    text-align: left;
}
.top-bar .my-info image{
    height: 60rpx;
    width: 60rpx;
    border-radius: 60rpx;
    float: left;
}
.top-bar .my-info .my-name{
    font-size: 30rpx;
    color: #fff;
    text-align: right;
    height: 60rpx;
    line-height: 60rpx;
    float: left;
    margin-left: 30rpx;
}
.top-bar .create-room{
    height: 60rpx;
    line-height: 60rpx;
    float: right;
    font-size: 30rpx;
    padding: 0 15rpx;
    color: #fff;
    text-align: right;
    border: 1px solid #fff;
}
.hover-create-room{
    opacity: 0.6;
}
.list-wrap{
    width: 100%;
    border-bottom: 1px solid #000;
    margin-top: 20rpx;
}
.room-item{
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    border-top: 1px solid #000;
    background-color: #fff;
    box-sizing: border-box;
    padding: 0 40rpx;
}
.room-item view{
    float: left;
    font-size: 40rpx;
    line-height: 120rpx;
    height: 120rpx;
}
.room-item .room-name{
    margin-right: 30rpx;
}
.room-item .room-usercount{
    font-size: 30rpx;
    line-height: 130rpx;
}
.room-item .join-room{
    font-size: 30rpx;
    float: right;
    padding: 0 15rpx;
    border: 1px solid #000;
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 35rpx;
}
.hover-join-room{
    opacity: 0.6;
}

.create-panel{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left:0;
    background-color: #f5f5f9;
    transition: all .5s;
}

.create-panel .top-bar{
    height: 60rpx;
    line-height: 60rpx;
    background-color: #000;
    padding: 20rpx 40rpx;
}
.create-panel .cancel{
    float: left;
    color: #fff;
    font-size: 30rpx;
    border: 1px solid #fff;
    padding: 0 15rpx;
}
.create-panel .commit{
    float: right;
    color: #fff;
    font-size: 30rpx;
    border: 1px solid #fff;
    padding: 0 15rpx;
}
.create-panel .input{
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fff;
    margin-top: 20rpx;
    box-sizing: border-box;
    padding: 0 40rpx;
}
.create-panel .input input{
    height: 80rpx;
    line-height: 80rpx;
    text-align: left;
    
}