page{
    width: 100%;
    height: 100%;
    background-color: #f5f5f9;
    text-align: center;
    overflow: hidden;
    font-size: 40rpx;
}
.top-bar{
    height: 60rpx;
    line-height: 80rpx;
    background-color: #000;
    padding: 20rpx 40rpx;
}
.top-bar .my-info{
    height: 100%;
    float: left;
    font-size: 40rpx;
    width: 500rpx;
    text-align: left;
}
.top-bar .my-info image{
    height: 60rpx;
    width: 60rpx;
    border-radius: 60rpx;
    border: 1px solid #fff;
    float: left;
}
.top-bar .my-info .my-name{
    font-size: 30rpx;
    color: #fff;
    text-align: right;
    height: 60rpx;
    line-height: 60rpx;
    float: left;
    margin-left: 30rpx;
}
.top-bar .create-room{
    height: 60rpx;
    line-height: 60rpx;
    float: right;
    font-size: 30rpx;
    padding: 0 15rpx;
    color: #fff;
    text-align: right;
    border: 1px solid #fff;
}