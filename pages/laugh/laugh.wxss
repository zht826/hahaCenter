page{
    width: 100%;
    height: 100%;
    background-color: #f5f5f9;
    text-align: center;
}
.refresh{
    width: 40px;
    height: 40px;
    border-radius: 40px;
    overflow: hidden;
    background-color: #fff;
    z-index: 999999;
    position: fixed;
    right: 50rpx;
    bottom: 100rpx;
    box-shadow: 0 0 10px #000;
}
.refresh image{
    display: block;
    width: 30px;
    height: 30px;
    position: absolute;
    left: 5px;
    top: 5px;
}
.nav{
    width: 500rpx;
    height: 50rpx;
    position: fixed;
    top: 10px;
    left: 125rpx;
    background-color: #fff;
    z-index: 99999;
    /*display: flex;
    align-items: center;
    justify-content: space-around;*/
    border-radius: 50rpx;
    box-shadow: 0 0 10px #007aff;
}
.nav .nav-bar{
    width: 50%;
    height: 50rpx;
    background-color: #007aff;
    border-radius: 50rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    transition: all 0.5s;
}
/*.nav .nav-bar.left{
