.wrap{
    width: 100%;
    padding: 30rpx 0 50rpx 0;
}
.item{
    width: 700rpx;
    margin-left: 25rpx;
    margin-top: 20rpx;
    overflow: hidden;
    border: 1px solid #000;
    box-sizing: border-box;
    box-shadow: 0 0 5px #000;
    background-color: #fff;
}
.item navigator{
    width: 100%;
    height: 100%;
}
.item .top{
    width: 620rpx;
    padding: 0 40rpx;
    height: 50rpx;
    overflow: hidden;
    border-bottom: 1px solid #ccc;
}
.item .top .title{
    height: 50rpx;
    line-height: 50rpx;
    width: 50%;
    float: left;
    text-align: left;
    font-size: 25rpx;
}
.item .top .time{
    height: 50rpx;
    line-height: 50rpx;
    float:right;
    text-align: right;
    width: 50%;
    font-size: 25rpx;
}
.item .content{
    width: 620rpx;
    padding: 30rpx;
    
}
.item .content image{
    width: 0;
    height: auto;
    max-width: 100%;
    /*height: 90rpx;*/
}
.item .content .text{
    width: 100%;
    font-size: 30rpx;
    line-height: 1.5;
    text-align: left;
}
